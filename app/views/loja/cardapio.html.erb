        <!-- INICIO DA SEÇÃO DAS REGIÕES -->
        <div class="stores">
        	<div>
        		<div class="content center">
        			<ul class="states">
        				<% @states.each do |state| %>
        					<li <% if state == session[:store]['uf'] %> class="active" <% end %> >
                                <% 
                                
                                case state 
                                when 'SP'
                                    concat 'São Paulo'
                                when 'RJ'
                                    concat 'Rio de Janeiro'
                                when 'SC'
                                    concat 'Santa Catarina'
                                when 'RS'
                                    concat 'Rio Grande do Sul'
                                when 'PR'
                                    concat 'Paraná'
                                when 'AP'
                                    concat 'Amapá'
                                else
                                    concat ''
                                end
                                
                                %>
                            </li>
        				<% end %>
        			</ul>
                    <ul class="neighbor">
                        <% @neighborhood.each do |n| %>
                            <li <% if n.neighborhood == session[:store]['name'] %> class="active" <% end %> >	
                                <%= n.neighborhood %>
                            </li>
                        <% end %>
                    </ul>
        		</div>
        	</div>
        </div>
    <!-- FINAL DA SEÇÃO DAS REGIÕES -->


