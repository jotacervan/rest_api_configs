                                <span class="preco"><span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol"> <%= number_to_currency(preco.price, unit: 'R$ ', separator: ',') %> </span>
                            </div>

                        <% else %>

                            <div class="box-preco">
                                <span class="preco"><span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol"> EM FALTA </span>
                            </div>

                        <% end %>
                        
                        <div class="center">
                            <% if session[:logged].nil? %>
                                <a href="#login" data-toggle="modal" class="btn btn-ok">EU QUERO</a>
                            <% else %>
                                <% if @store.is_open == false %>
                                    <a href="#" onclick="alert('Loja está fechada no momento!')" class="btn btn-ok">EU QUERO</a>
                                <% else %>
                                    <a href="#<%= p.id %>" data-toggle="modal" class="btn btn-ok">EU QUERO</a>
                                <% end %>
                            <% end %>
                        </div>
                        <br>
                    </div>
                    

                    <div id="<%= p.id %>" class="modal fade" tabindex="-1" role="dialog">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content defaultcolor">
                                  <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Adicionar ao Carrinho</h4>
                                  </div>
                                  <div class="modal-body">

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="img-pizza">
                                                <img src="<%= p.picture %>" alt="<%= p.name %>" title="<%= p.name %>" style="filter:none; -webkit-filter:none;" >
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <h3 class="center"><%= p.name %></h3>
                                            <br>
                                            <p><%= p.description %></p>
                                            <%= form_for :cart, url: add_cart_path do |f| %>
                                                <%= f.hidden_field :name, :value => p.name %>
                                                <%= f.hidden_field :size, :value => session[:tamanho] %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p>Escolha a borda</p>
                                                        <%= f.select(:borders ) do %>
                                                            <%= content_tag(:option, @borda.name, value: @borda.id) %>
                                                            <% @store.borders.each do |border| %>
                                                                <%= content_tag(:option, border[:name], value: border[:id]) %>
                                                            <% end %>
                                                        <% end %>
                                                        <br>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <p>Quantidade: </p>
                                                        <%= f.number_field :quantity, :class => 'form-control', :placeholder => 'Quantidade', :value => 1 %>
                                                        <br>
                                                    </div>                                         
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p>Massa</p>
                                                        <%= f.select(:massa ) do %>
                                                            <%= content_tag(:option, session[:massa]) %>
                                                            <%= content_tag(:option, 'Fina') %>
                                                            <%= content_tag(:option, 'Média') %>
                                                            <%= content_tag(:option, 'Grossa') %>
                                                        <% end %>
                                                    </div>
                                                    <div class="col-md-6">
                                                    <br>
                                                        <% if session[:integral] == '1' %>
                                                            <p><%= f.check_box :integral, :checked => true %> &nbsp; &nbsp; Pizza Integral </p>
                                                        <% else %>
                                                            <p><%= f.check_box :integral %> &nbsp; &nbsp; Pizza Integral </p>
                                                        <% end %>
                                                    </div>
                                                </div>
                                                
                                                <br>
                                                <p>Observações: </p>
                                                <%= f.text_area :obs, :class => 'form-control', :placeholder => 'Observações' %>
                                                <br>
                                                <p class="btn btn-default" onclick="segundosabor()">Adicionar 2º sabor</p><br>
                                                <br>
                                                <%= f.hidden_field :sabor1, :value => p.id %>
                                                <div class="segundo-sabor hidden">
                                                    <p>Selecione o 2º sabor:</p>
                                                    <%= f.select(:sabor2) do %>
                                                        <%= content_tag(:option, '2º Sabor', value: 'none') %>
                                                        <% @store.pizzas.each do |p| %>
                                                            <%= content_tag(:option, p[:name], value: p[:id]) %>
                                                        <% end %>
                                                    <% end %>
                                                    <br>
                                                </div>

                                                <%= f.submit 'Adicionar ao Carrinho', :class => 'right btn btn-success' %>
                                                <div class="clear"></div>
                                            <% end %>
                                        </div>
                                    </div>
                                    
                                  </div>
                                </div><!-- /.modal-content -->
                              </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->

                <% end %>
            
            </div>
            
            <div class="center">
                <img src="/images/docesPrime.png" onclick="javascript: location.href='<%= cardapio_path %>/docesPrime'"  alt="Pizza Prime" title="Pizza Prime" class="imgResp pointer">
            </div>
            <br>
            <div class="center">
                <img src="/images/bebidas.png" alt="Pizza Prime" title="Pizza Prime" id="bebidas" class="imgResp">
            </div><br>
            <br>
            <div class="row center marginBebe">
                <div class="col-md-4 rightBorder">
                    <p class="faixaFundo">Produto</p>
                    <% @store.beverages.where(:available => true).each do |b| 
                        price = b.price_tables.where(:store_ids => @store.id).first
                        next if price.nil?
                        %>
                        <p class="nomeBebidas"><%= b.name %></p>
                    <% end %>
                </div>
                <div class="col-md-4">
                    <p class="faixaFundo">Valor</p>
                    <% @store.beverages.each do |b| %>
                        <% 
                        price = b.price_tables.where(:store_ids => @store.id).first
                        next if price.nil?
                        %>
                        <p class="nomeBebidas"><%= number_to_currency(price.price, unit: 'R$ ', separator: ',')  %></p>
                        
                    <% end %>
                </div>
                <div class="col-md-4 leftBorder">
                    
                    <p class="faixaFundo">Quantidade</p>
                    <div class="quatityBeve">
                        <% @store.beverages.each do |b| %>
                        <% 
                        price = b.price_tables.where(:store_ids => @store.id).first
                        next if price.nil?
                        if session[:bebidas].blank?
                        %>

                            <p data-id="<%= b.id %>" data-url="<%= request.url.gsub(request.fullpath, '') %>/bebidas/<%= price.price.to_i %>/<%= b.id %>" class="nomeBebidas selectBebe"><span class="left" onclick="bebeMenos(this)">-</span><i>0</i><span class="right" onclick="bebeMais(this)">+</span></p>
                        <% else %>
                            <% if session[:bebidas][b.id.to_s].nil? %>
                                <p data-id="<%= b.id %>" data-url="<%= request.url.gsub(request.fullpath, '') %>/bebidas/<%= price.price.to_i %>/<%= b.id %>" class="nomeBebidas selectBebe"><span class="left" onclick="bebeMenos(this)">-</span><i>0</i><span class="right" onclick="bebeMais(this)">+</span></p>
                            <% else %>
                                <p data-id="<%= b.id %>" data-url="<%= request.url.gsub(request.fullpath, '') %>/bebidas/<%= price.price.to_i %>/<%= b.id %>" class="nomeBebidas selectBebe"><span class="left" onclick="bebeMenos(this)">-</span><i><%= session[:bebidas][b.id.to_s]['qtd'] %></i><span class="right" onclick="bebeMais(this)">+</span></p>
                            <% end %>
                        <% end %>
                        <% end %>
                    </div>
                </div>
            </div>

        </div>
        <!-- FINAL DO CORPO DO CARDÁPIO -->

        <!-- MODALS -->
        <div id="login" class="modal fade" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Faça seu Login</h4>
              </div>
              <div class="modal-body">
                
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                    <div class="center">
                        <p class="center">Faça seu login para continuar, <a href="<%= cadastre_path %>">Cadastre-se</a></p>
                        <p class="center">ou</p>
                        <img src="/images/facebook.png" style="cursor:pointer" onclick="location.href='<%= auth_provider_path %>'" alt="Pizza Prime Facebook" title="Pizza Prime Facebook"/>
                    </div>
                    <br>
                        <br>
                        <%= form_for :login, url: login_path do |f| %>
                            <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %><br>
                            <%= f.password_field :password, :class => 'form-control', :placeholder => 'Senha' %><br>
                            <%= f.submit 'Login', :class => 'btn btn-danger' %>
                        <% end %>
                    </div>             
                </div>

              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
        <!-- FINAL MODALS -->

        <% if !flash[:alert].blank? %>
            <div id="flash" class="modal fade" tabindex="-1" role="dialog">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Mensagem do Sistema</h4>
                  </div>
                  <div class="modal-body">
                    
                    <div class="alert alert-danger"><%= flash[:alert] %></div>

                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
            <%= flash[:alert] = nil %>
        <% end %>
        
        <% if !flash[:notice].blank? %>
            <div id="flash" class="modal fade" tabindex="-1" role="dialog">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Mensagem do Sistema</h4>
                  </div>
                  <div class="modal-body">
                    
                    <div class="alert alert-info"><%= flash[:notice] %></div>

                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
            <%= flash[:notice] = nil %>
        <% end %>
        
        <%= render 'footer' %>

        <script type="text/javascript" src="/js/jquery-3.1.1.min.js"></script>
        <script type="text/javascript" src="/js/bootstrap.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script>
        <script type="text/javascript" src="/js/main.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenMax.min.js"></script>
        <script type="text/javascript" src="/js/untitled.js"></script>

        <script>
            $(document).ready( function(){ 

                var controller = new ScrollMagic.Controller();

                $('#flash').modal('show');

                var scene = new ScrollMagic.Scene({triggerElement: '#tradicionais', triggerHook: 0.7})
                    .setClassToggle(".tradicio", "black")
                    .addTo(controller); // final da scene var

                var scene = new ScrollMagic.Scene({triggerElement: '#bebidas', triggerHook: 0.7})
                    .setClassToggle(".marginBebe", "black")
                    .addTo(controller); // final da scene var

            });
        </script>
    </body>
</html>
